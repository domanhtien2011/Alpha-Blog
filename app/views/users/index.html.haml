%h1.text-center
  All Alpha Bloggers

.text-center
  = will_paginate
  - @users.each do |user|
    %ul.listing
      .row
        .well.col-md-4.col-md-offset-4
          %li
            = link_to(gravatar_for(user), user_url(user))
          %li.article-title
            = link_to(user.username, user_url(user))
          %li
            %small
              = pluralize(user.articles.count, "article") if user.articles
          - if logged_in? && current_user.admin?
            %li
              = link_to("Delete this user", user_url(user), method: :delete, data: { confirm: "Are you sure?" })
  = will_paginate
